{
  "name": "graphql-binary",
  "version": "0.1.0",
  "description": "GraphQL binary protocol for smaller network traffic and parsing performance",
  "main": "index.js",
  "repository": "https://github.com/esseswann/graphql-binary",
  "author": "jsus <esseswann@gmail.com>",
  "license": "MIT",
  "private": false,
  "scripts": {
    "test": "jest --watch",
    "dev": "nodemon --exec ts-node"
  },
  "dependencies": {
    "graphql": "16.0.1",
    "lodash": "4.17.21"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "2.3.0",
    "@graphql-codegen/typed-document-node": "2.2.0",
    "@graphql-codegen/typescript": "2.4.0",
    "@graphql-codegen/typescript-operations": "2.2.0",
    "@graphql-tools/mock": "8.4.3",
    "@graphql-tools/schema": "8.3.1",
    "@types/jest": "27.0.2",
    "@types/node": "16.11.7",
    "graphql-query-compress": "1.2.4",
    "jest": "27.3.1",
    "nodemon": "2.0.15",
    "prettier": "2.4.1",
    "ts-jest": "27.0.7",
    "ts-node": "10.4.0",
    "typescript": "4.4.4"
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": "ts,graphql"
  },
  "prettier": {
    "tabWidth": 2,
    "useTabs": false,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "none"
  },
  "jest": {
    "roots": [
      "<rootDir>/src"
    ],
    "testMatch": [
      "**/__tests__/**/*.+(ts)",
      "**/?(*.)+(test).+(ts)"
    ],
    "transform": {
      "^.+\\.(ts|tsx|js)$": "ts-jest"
    }
  }
}
